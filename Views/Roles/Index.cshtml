@model IEnumerable<proyectoscrum.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>

<p>
    <a asp-action="Create">Crear nuevo rol</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdRol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreRol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdRol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreRol)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRol">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdRol">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRol">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
