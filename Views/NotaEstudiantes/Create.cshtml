@model proyectoscrum.Models.NotaEstudiante

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Nota Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <select asp-for="IdUsuario" class ="form-control" asp-items="ViewBag.IdUsuario"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdMateria" class="control-label"></label>
                <select asp-for="IdMateria" class ="form-control" asp-items="ViewBag.IdMateria"></select>
            </div>
            <div class="form-group">
                <label asp-for="Rubica" class="control-label"></label>
                <input asp-for="Rubica" class="form-control" />
                <span asp-validation-for="Rubica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PuntajeObtenido" class="control-label"></label>
                <input asp-for="PuntajeObtenido" class="form-control" />
                <span asp-validation-for="PuntajeObtenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
